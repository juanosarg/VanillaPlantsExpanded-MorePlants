<Defs>

	
	<!--=========================== Food crops ==============================-->


	

	<ThingDef ParentName="PlantBase">
		<defName>VCE_Peanut</defName>
		<label>peanut plant</label>
		<description>.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Crops/VCE_Peanut</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.70</fertilityMin>
			<fertilitySensitivity>1</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>4</maxMeshCount>
			<harvestedThingDef>VCE_RawPeanut</harvestedThingDef>
			<immatureGraphicPath>Things/Plant/Crops/VCE_PeanutImmature</immatureGraphicPath>
			<harvestYield>11</harvestYield>
			<harvestWork>300</harvestWork>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>5.6</growDays>
			<neverBlightable>true</neverBlightable>
			<visualSizeRange>0.4~0.8</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
			<humanFoodPlant>true</humanFoodPlant>
		</plant>
	</ThingDef>
	
