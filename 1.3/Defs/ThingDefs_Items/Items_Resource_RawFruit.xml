<Defs>  


	<ThingDef ParentName="VCE_FruitFoodRawBase">
		<defName>VCE_RawAvocado</defName>
		<label>avocados</label>
		<description>A green or nearly black coloured fruit with a large seed or pit in the center. Avocados have a very mild, creamy texture. Hipsters love them.</description>
		
		<thingCategories>
			<li>VCE_Fruit</li>
		</thingCategories>
		<graphicData>

			<texPath>Things/Items/Raw/VCE_Avocados</texPath>

		</graphicData>
		<statBases>
			<MarketValue>1.2</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>5</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>

