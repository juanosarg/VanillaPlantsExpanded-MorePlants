<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=========================== Tunneller crops ==============================-->
	
	<ThingDef ParentName="CavePlantBase">
    <defName>VCE_Moss</defName>
    <label>cave moss</label>
    <description>A nutrient-rich moss that can be used to feed cave animals, but not humans. It can grow on fungal gravel, but only in darkness - exposing it to any kind of light, including darklights, will kill it.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Crops/VCE_Moss</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.3</fertilityMin>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>VCE_RawMoss</harvestedThingDef>
      <harvestYield>14</harvestYield>
      <sowTags>
        <li>Ground</li>      
      </sowTags>
      <topWindExposure>0</topWindExposure>
      <growDays>7</growDays>
      <cavePlantWeight>0</cavePlantWeight>
      <visualSizeRange>0.3~0.65</visualSizeRange>
      <purpose>Food</purpose>     
      <maxMeshCount>9</maxMeshCount>
    </plant>
  </ThingDef>
  
  
	
</Defs>
