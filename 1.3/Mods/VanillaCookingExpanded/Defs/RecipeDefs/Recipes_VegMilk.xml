<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>VCE_MilkFromRice</defName>
		<label>extract milk from rice</label>
		<description>Extract vegetable milk from rice. This milk can be used in any recipe that asks for milk.\n\nRice is very inefficient when converted into milk, and a lot of nutrition is lost in the process.</description>
		<jobString>Extracting milk from rice.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>1000</workAmount>
		<recipeUsers>
			<li>VCE_VegMilkExtractor</li>	
				
		</recipeUsers>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>

		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawRice</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Milk>15</Milk>
		</products>
		<researchPrerequisite>
			<li>VCE_VegMilkExtraction</li>
		</researchPrerequisite>

	</RecipeDef>
	
